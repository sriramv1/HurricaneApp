<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:HApp"
             x:Class="HApp.MainPage">
    
        <StackLayout>
        
        <Label Text="Hurricane App"
                VerticalOptions="Center" 
                   FontSize="Large"
                   TextColor="DarkGray"
                   Margin="0,25,0,0"
                HorizontalOptions="CenterAndExpand" />
        <Image Source="HurricaneLogo.png"
               HeightRequest="150"
               WidthRequest="150"
               HorizontalOptions="Center"
               VerticalOptions="Center"/>
        <Entry x:Name="txtUsername" Placeholder="Username" 
               HorizontalOptions="CenterAndExpand"
               WidthRequest="150"
               HeightRequest="50"
               Margin="0,0,0,0"
               FontSize="15" HorizontalTextAlignment="Center"
               />
        
        <Entry x:Name="txtPassword" Placeholder="Password" 
               HorizontalOptions="CenterAndExpand"
               WidthRequest="150"
               HeightRequest="50"
               Margin="0,10,0,0"
               IsPassword="True" TextColor="DarkBlue"
               FontSize="15" HorizontalTextAlignment="Center"
               />
        <Button Text="Forgot Password" TextColor="DarkCyan" 
               Margin="0,0,0,0"
               FontSize="12" 
               HorizontalOptions="Center"/>
        <!--<Label Text="Already a user?" TextColor="Gray" 
               HorizontalOptions="Center"/>-->
        <Button x:Name="btnLogin" Text="Login   "
                Image="Login"
                Clicked="btnLogin_Clicked"
                TextColor="Black"
                Margin="0,0,0,20"
                BorderWidth="1"
                HorizontalOptions="CenterAndExpand"
                VerticalOptions="Center"
                BorderColor="LightGreen"
                BackgroundColor="LightGreen"
                />
        <Label x:Name="lblLoginStatus" HorizontalOptions="Center" 
               />
